  title={Turbulence and the Vegetation},
  author={Li, Shuolin and Katul, Gabriel and Huai, Wenxin},
  journal={Water Resources Research},
  volume={55},
  number={8},
  pages={6436--6449},
  year={2019},
  publisher={Wiley Online Library},
  abstract={This research examines how boundary roughness (e.g., vegetation) affects flow structure and bulk flow properties. Developed an asymmetric eddy diffusivity model for vegetated flows. Derived a universal velocity distribution equation using asymptotic analysis. Applied numerical reactive transport modeling to quantify contaminant absorption by vegetation in floating treatment wetlands. The study links microscale physics to field-scale contaminant removal efficiency, confirming results against empirical data.},
  html={https://doi.org/10.1029/2019WR025131},
  selected={true},
  bibtex_show={true}
}

@article{li2023settling_hydro,
  abbr={Sediments},
  title={Turbulence and Sediments},
  author={Li, Shuolin and Bragg, Andrew D. and Katul, Gabriel},
  journal={Geophysical Research Letters},
  pages={e2023GL105810},
  year={2023},
  publisher={Wiley Online Library},
  abstract={This work introduced one of the first models for sediment settling velocity in turbulent flows using perturbation analysis. Traditionally, settling velocity is assumed equal to still water, but my work shows turbulence reduces settling velocity via Basset history force and virtual mass effects. This challenges assumptions used in Rouse's equation and explains discrepancies with turbulent Schmidt number formulations. The derived comprehensive equation includes all turbulence scales, from bulk flow to Kolmogorov scale, revealing scaling with Reynolds number, limits of local mixing-length models, and Rouse equation as a special case.},
  html={https://doi.org/10.1029/2023GL105810},
  selected={true},
  bibtex_show={true}
}

@article{li2025capacity_hydro,
  abbr={SedTransport},
  title={Sediment Carrying Capacity from Turbulence Theory},
  author={Li, Shuolin and Pathz, T. and Katul, Gabriel},
  journal={Physical Review Letters},
  year={2025},
  note={Under review},
  abstract={Channel vulnerability to scour and deposition remains a key engineering concern, especially under climate pressure. Existing models often lack direct links between sediment physics and observations. My research derives a universal prediction formula starting from Turbulent Kinetic Energy (TKE) equations and shear stress budget. This formulation spans five orders of magnitude of historic measurements and supports climate adaptation infrastructure and engineering of resilient scouring/deposition systems. The model bridges microscale turbulence and bulk-scale sediment transport, enabling more reliable and physically grounded sediment predictions.},
  selected={true},
  bibtex_show={true}
}

