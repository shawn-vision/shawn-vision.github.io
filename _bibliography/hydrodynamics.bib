@article{li2021friction_hydro,
  abbr={Turbulence},
  title={Turbulence and the Wall},
  author={Li, Shuolin and Katul, Gabriel},
  journal={Physics of Fluids},
  volume={33},
  number={10},
  pages={105127},
  year={2021},
  publisher={AIP Publishing},
  abstract={A fundamental problem in fluid mechanics is explaining energy dissipation in turbulent flows due to friction at boundaries (wall friction). This issue has significant implications for the transport of oil and methane across continents. Traditional analyses rely on empirical tools such as Nikuradse/Moody diagrams to describe friction factor as a function of Reynolds number and relative roughness. My work derives a first-principles physical explanation based on turbulence theory, unifying these diagrams into a single curve by using the turbulence energy spectrum.},
  html={https://doi.org/10.1063/5.0066616},
  selected={true},
  bibtex_show={true}
}

@article{li2019vegetation_hydro,
